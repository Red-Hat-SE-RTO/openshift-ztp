---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: cluster-admin
  namespace: {{ aap_operator_namespace }}
subjects:
  - kind: ServiceAccount
    name: default
    namespace: {{ aap_operator_namespace }}
  - kind: ServiceAccount
    name: {{ aap_controller_name }}
    namespace: {{ aap_operator_namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
