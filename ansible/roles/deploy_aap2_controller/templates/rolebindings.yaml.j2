---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: aap2-cluster-admin
subjects:
  - kind: ServiceAccount
    name: default
    namespace: {{ aap_operator_namespace }}
  - kind: ServiceAccount
    name: {{ aap_controller_name }}
    namespace: {{ aap_operator_namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
